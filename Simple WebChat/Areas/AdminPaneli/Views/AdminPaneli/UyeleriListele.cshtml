@model IEnumerable<Simple_WebChat.Models.Mdl.Users>

@{
    ViewBag.Title = "UyeleriListele";
    Layout = "~/Areas/AdminPaneli/Views/Shared/_Layout.cshtml";
}
<div class=" content-wrapper">
    <div class="container-fluid">

        <h2>UyeleriListele</h2>

        <p>
            @Html.ActionLink("Yeni Kullanıcı Ekle", "UyeEkle")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.ActionLink("Güncelle", "UyeGuncelle", new { UserId = item.UserId }) |
                        @Html.ActionLink("Sil", "UyeSil", new { UserId = item.UserId })
                    </td>
                </tr>
            }

        </table>
</div>
</div>